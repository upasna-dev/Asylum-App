<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/showBeforeLoadFrame"
        android:elevation="4dp"
        android:visibility="gone"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <pl.droidsonroids.gif.GifImageView
            android:layout_weight="1"
            android:elevation="4dp"
            android:src="@drawable/loading"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/updateImgProgress"/>

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:elevation="4dp">

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="30dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:textSize="15dp"
                android:textColor="#fff"
                android:id="@+id/em"
                android:layout_gravity="left"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_bg_red"
                android:text="Emergency "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:layout_weight="1"
                android:id="@+id/en"
                android:textSize="15dp"
                android:textColor="#fff"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_bg_blue"
                android:text="Enqiury "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>


    </RelativeLayout>



    <LinearLayout
        android:background="#039BE5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backClick"
            android:src="@drawable/backbuttonwhite"
            android:layout_width="60dp"
            android:layout_height="45dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:paddingBottom="200dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <HorizontalScrollView
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                android:id="@+id/hThumb"
                android:scaleType="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/slider_1"/>

                <ImageView
                    android:id="@+id/hThumb2"
                    android:scaleType="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/slider_1"/>

                <ImageView
                    android:id="@+id/hThumb3"
                    android:scaleType="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/slider_1"/>

                <ImageView
                    android:id="@+id/hThumb4"
                    android:scaleType="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/slider_1"/>

         </LinearLayout>

            </HorizontalScrollView>



            <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/hTitle"
                android:fontFamily="sans-serif"
                android:text="Pushpanjali Hospital"
                android:textColor="#636363"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/hRating"
                android:textColor="#00A6CB"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/startrating"
                android:fontFamily="sans-serif"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_weight="1"
                android:text="3.5"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/loc"
            android:fontFamily="sans-serif"
            android:id="@+id/hAddress"
            android:text="Dishant Hospital, Ring road, Agra"
            android:textColor="#5E5E5E"
            android:textSize="15dp" />


    </LinearLayout>

         <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif"
            android:text="About "
            android:textColor="#4A4A4A"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="5dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:id="@+id/hAbout"
            android:text="The premier multispecialty tertiary care hospital of India has been acknowledged globally as centre of medical excellence. The kind of confidence, trust it has."/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif"
            android:text="Services"
            android:textColor="#4A4A4A"
            android:textSize="17dp"
            android:textStyle="bold" />


        <LinearLayout
            android:weightSum="2"
            android:paddingTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/ser1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/ThemeColor"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_marginVertical="10dp"
                    />

                <Button
                    android:id="@+id/ser2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/ThemeColor"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_marginVertical="10dp"
                    />

                <Button
                    android:id="@+id/ser3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/ThemeColor"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_marginVertical="10dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/ser4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/ThemeColor"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_marginVertical="10dp"
                    />

                <Button
                    android:id="@+id/ser5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/ThemeColor"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_marginVertical="10dp"
                    />

                <Button
                    android:id="@+id/other"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/ThemeColor"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_marginVertical="10dp"
                    android:text="Others"/>

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>

