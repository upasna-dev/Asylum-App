<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:cardCornerRadius="3dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

 <LinearLayout
    android:padding="10dp"
    android:elevation="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/innerLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
            android:id="@+id/hBanner"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:layout_width="350dp"
            android:layout_marginRight="10dp"
            android:layout_height="210dp"
            android:src="@drawable/slider_1" />


        </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="Pushpanjali Hospital"
                android:textColor="#636363"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/hRating"
                android:textColor="#00A6CB"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/startrating"
                android:fontFamily="sans-serif"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_weight="1"
                android:text="3.5"/>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/hEnq"
                android:textSize="15dp"
                android:onClick="about1"
                android:layout_marginRight="10dp"
                android:textColor="#fff"
                android:layout_gravity="end"
                android:background="@drawable/btn_bg_blue"
                android:text="Enqiury "
                android:layout_width="wrap_content"
                android:layout_height="35dp" />



        </LinearLayout>


    </LinearLayout>


</LinearLayout>

</androidx.cardview.widget.CardView>

