<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    >







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:background="#039BE5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backClick"
                android:src="@drawable/backbuttonwhite"
                android:layout_width="60dp"
                android:layout_height="45dp"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/searchdoctor" />

        <TextView
            android:id="@+id/textView12"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="About Asylum"
            android:textSize="20sp"
            android:textStyle="bold" />





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:lineHeight="25dp"
            android:paddingHorizontal="60dp"
            android:text="Read : Due to covid-19 outbreak , we are doing our bit for the society.
All the postings are free untill the conditions are back to nomal."
            android:textColor="#222"
            android:textSize="15dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-16dp" />



        <TextView
            android:layout_marginBottom="100dp"
            android:textStyle="bold"
            android:layout_marginRight="12dp"
            android:layout_gravity="right"
            android:text=" \n   ✍ Asylum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/donate">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/searchdoctor" />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Donate Asylum"
                android:textSize="20sp"
                android:textStyle="bold" />





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:lineHeight="25dp"
                android:paddingHorizontal="60dp"
                android:text="Read : Be precise on what you want and how you think the donors or the organisation you’re writing to can be of help. Inform your reader exactly how their donation is essential and what it will go towards to. "
                android:textColor="#222"
                android:textSize="15dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-16dp" />



            <TextView
                android:layout_marginBottom="100dp"
                android:textStyle="bold"
                android:layout_marginRight="12dp"
                android:layout_gravity="right"
                android:text=" \n   ✍ Asylum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>


</ScrollView>